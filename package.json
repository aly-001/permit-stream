{
  "name": "electron-react-amazon",
  "version": "1.0.0",
  "description": "Electron React Amazon Viewer",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "npx webpack --mode production",
    "watch": "npx webpack --watch",
    "dev": "npx webpack serve --mode development",
    "package": "electron-builder build --win --linux --mac",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.electron.amazon-viewer",
    "productName": "Amazon Viewer",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "index.html",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-react": "^7.22.15",
    "@electron/remote": "^2.0.10",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "electron": "^26.2.1",
    "electron-builder": "^24.6.4",
    "style-loader": "^3.3.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}