{
  "name": "electron-react-permit-stream",
  "version": "1.0.0",
  "description": "Electron React Permit Stream Viewer",
  "main": "main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "webpack --mode production",
    "dev": "webpack serve --mode development",
    "package": "electron-builder build --win --linux --mac",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.electron.permit-stream",
    "productName": "Permit Stream",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "index.html",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/@electron/remote",
        "to": "node_modules/@electron/remote"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@electron/remote": "^2.0.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-native-web": "^0.19.13",
    "react-scripts": "^5.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-react": "^7.22.15",
    "babel-loader": "^9.1.3",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "electron": "^26.2.1",
    "electron-builder": "^24.6.4",
    "html-webpack-plugin": "^5.6.3",
    "style-loader": "^3.3.3",
    "wait-on": "^8.0.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
